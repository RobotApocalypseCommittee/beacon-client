<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BeaconClient"
             x:Class="BeaconClient.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to Joemama!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Button Text="Atto is excellent"
                Clicked="OnButtonClicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />
        <Button Text="Server Test"
                Clicked="OnButton2Clicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />
        <Entry Text="http://localhost:8088"
               x:Name="ServerEntry"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
        <Entry Text="jane.evans@gmail.com"
               x:Name="EmailEntry"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
        <Button Text="Clear"
                Clicked="OnClearClicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
